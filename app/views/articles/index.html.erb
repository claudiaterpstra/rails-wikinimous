<div class="container">
<h1>All our Articles</h1>

<%= link_to "Add a new article", new_article_path %>

<% @articles.each do |article| %>
  <h3><%= link_to article.title, article_path(article) %></h3>
  <p><%=article.content %></p>
  <%= link_to "Delete this article", article_path(article), method: :delete %>
<% end %>
</div>
